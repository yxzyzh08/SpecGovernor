{
    "python.defaultInterpreterPath": "~/miniconda3/envs/specgovernor/bin/python",
    "terminal.integrated.defaultProfile.linux": "specgovernor",
    "terminal.integrated.profiles.linux": {
        "specgovernor": {
            "path": "/usr/bin/bash",
            "args": [
                "-c",
                "source ~/miniconda3/etc/profile.d/conda.sh && conda activate specgovernor && exec bash"
            ]
        }
    }
}